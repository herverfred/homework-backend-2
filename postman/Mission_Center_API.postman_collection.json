			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData.success && jsonData.data) {",
							"        pm.collectionVariables.set(\"userId\", jsonData.data.userId);",
							"        console.log(\"userId set to: \" + jsonData.data.userId);",
							"    }",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"username\": \"{{username}}\",\n    \"password\": \"{{password}}\",\n    \"loginDate\": \"{{loginDate}}\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/login",
					"host": ["{{baseUrl}}"],
					"path": ["api", "login"]
				},
				"description": "用戶登錄 - 驗證用戶認證，記錄登錄事件，並返回用戶信息。登錄成功後會自動將 userId 設為變數。"
			},
			"response": [
				{
					"name": "Login Success",
					"originalRequest": {
						"method": "POST",
						"header": [
							{
